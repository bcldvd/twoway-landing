---
import { Icon } from "astro-icon/components";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://twoway.finance/",
    description: "TwoWay's official website",
    icon: "mdi:home",
  },
  {
    url: "https://www.linkedin.com/company/twoway-finance",
    description: "LinkedIn profile",
    icon: "fa-brands:linkedin",
  },
];
---

<footer class="relative flex h-64 items-center justify-center flex-col gap-4">
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-2">
    {
      links.map((link) => (
        <li>
          <a
            class="flex size-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="size-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
  <div>TwoWay.finance Â© 2024</div>
</footer>
